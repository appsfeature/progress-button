<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape >
            <solid
                android:color="@color/progress_color_button_dark" />
            <stroke
                android:width="1dp"
                android:color="@color/progress_color_button_dark" />
            <corners
                android:radius="30dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/progress_color_button"
                android:endColor="@color/progress_color_button"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/progress_color_button" />
            <corners
                android:radius="30dp" />
        </shape>
    </item>
</selector>